<p id="notice"><%= notice %></p>

<h1>My Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Read time</th>
      <th>Image</th>
      <th>Body</th>
      <th>Category</th>
      <th>Member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.read_time %></td>
        <td><%= blog.image %></td>
        <td><%= blog.body %></td>
        <td><%= blog.category.name %></td>
        <td><%= blog.member_id %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
